{% extends 'base.html.twig' %}

{% block title %}Journal{% endblock %}

{% block body %}
<div class="card shadow-sm">
    <div class="card-body">
        <h4 class="text-success">{{ journal.humeur }}</h4>
        <p class="mt-3">{{ journal.contenu }}</p>
        <p class="text-muted">
            <i class="fa-solid fa-calendar"></i>
            {{ journal.dateCreation|date('d/m/Y H:i') }}
        </p>
    </div>
    <div class="card-footer text-end">
        <a href="{{ path('app_journal_edit', {'id': journal.id}) }}" class="btn btn-warning">
            <i class="fa-solid fa-pen"></i> Modifier
        </a>
        <a href="{{ path('app_journal_index') }}" class="btn btn-secondary">
            Retour
        </a>
    </div>
</div>
{% endblock %}
