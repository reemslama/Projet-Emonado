<form method="get" class="row g-2 mb-4">
    <div class="col-md-5">
        <input type="text"
               name="q"
               value="{{ keyword }}"
               class="form-control"
               placeholder="Rechercher par humeur ou contenu">
    </div>

    <div class="col-md-4">
        <select name="sort" class="form-select">
            <option value="recent" {{ sort != 'old' ? 'selected' : '' }}>
                Plus rÃ©cent
            </option>
