{% extends 'base.html.twig' %}

{% block title %}Nouveau Journal{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-success fw-bold m-0">Nouveau journal</h2>
        <a href="{{ path('app_journal_index') }}" class="btn btn-outline-success">
            ← Retour à la liste
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            {# Désactivation de la validation HTML5 pour laisser Symfony afficher les erreurs #}
            {{ form_start(form, { 'attr': { 'novalidate': 'novalidate' } }) }}

                <div class="mb-3">
                    {{ form_label(form.humeur, 'Humeur') }}
                    {# Widget ChoiceType => liste des humeurs sélectionnables #}
                    {{ form_widget(form.humeur, { 'attr': { 'class': 'form-select' } }) }}
                    {{ form_errors(form.humeur) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.contenu, 'Contenu') }}
                    {{ form_widget(form.contenu, { 'attr': { 'class': 'form-control', 'rows': 6, 'placeholder': 'Décrivez votre journée, vos pensées, vos émotions...' } }) }}
                    {{ form_errors(form.contenu) }}
                </div>

                {# Affichage de la date/heure de création (informative). La valeur réelle est définie côté contrôleur. #}
                <div class="mb-3 text-muted">
                    <strong>Date de création:</strong> {{ "now"|date('d/m/Y H:i') }}
                </div>

                <div class="d-flex gap-2 mt-3">
                    <button class="btn btn-success">Enregistrer</button>
                    <a href="{{ path('app_journal_index') }}" class="btn btn-outline-secondary">Annuler</a>
                </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
