{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-4">
    <h2>Historique de mes rendez-vous</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Psychologue</th>
                <th>Type</th>
                <th>Statut</th>
            </tr>
        </thead>
        <tbody>
            {% for rdv in rendez_vous %}
                <tr>
                    <td>{{ rdv.date|date('d/m/Y H:i') }}</td>
                    <td>{{ rdv.nomPsychologue }}</td>
                    <td>{{ rdv.type.libelle }}</td>
                    <td>
                        {% if rdv.date < date() %}
                            <span class="badge bg-secondary">Passé</span>
                        {% else %}
                            <span class="badge bg-success">À venir</span>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center">Aucun rendez-vous trouvé</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('patient_index') }}" class="btn btn-secondary">Retour</a>
</div>
{% endblock %}