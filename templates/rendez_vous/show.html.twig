{% extends 'base.html.twig' %}

{% block title %}Détails RendezVous{% endblock %}

{% block body %}
<h1>Détails du Rendez-Vous</h1>

<table border="1" cellpadding="5">
    <tr>
        <th>Id</th>
        <td>{{ rendez_vou.id }}</td>
    </tr>
    <tr>
        <th>Nom patient</th>
        <td>{{ rendez_vou.nomPatient }}</td>
    </tr>
    <tr>
        <th>Nom psychologue</th>
        <td>{{ rendez_vou.nomPsychologue }}</td>
    </tr>
    <tr>
        <th>Date</th>
        <td>{{ rendez_vou.date ? rendez_vou.date|date('Y-m-d H:i:s') : '' }}</td>
    </tr>
    <tr>
        <th>Status</th>
        <td>{{ rendez_vou.status }}</td>
    </tr>
</table>

<a href="{{ path('app_rendez_vous_index') }}">Retour à la liste</a>
<a href="{{ path('app_rendez_vous_edit', {'id': rendez_vou.id}) }}">Modifier</a>
{{ include('rendez_vous/_delete_form.html.twig', {'rendez_vou': rendez_vou}) }}
{% endblock %}
