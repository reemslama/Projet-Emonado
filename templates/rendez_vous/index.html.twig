{% extends 'admin/base.html.twig' %}

{% block body %}
{# La classe justify-content-between écarte le titre et le bouton aux deux extrémités #}
<nav class="navbar navbar-dark bg-dark mb-4 px-4 d-flex justify-content-between align-items-center">
    <span class="navbar-brand m-0">EmoNado Admin</span>
    
    {# Un seul bouton, placé à droite #}
    <a href="{{ path('app_front_home') }}" class="btn btn-outline-info btn-sm">Voir le Front</a>
</nav>

<div class="card shadow mx-4">
    <div class="card-header d-flex justify-content-between align-items-center bg-white">
        <h3 class="text-primary m-0">Tableau de Bord</h3>
        <a href="{{ path('app_rendez_vous_new') }}" class="btn btn-success">Nouveau RDV</a>
    </div>
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Patient</th>
                    <th>CIN</th>
                    <th>Psychologue</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for r in rendez_vous %}
                <tr>
                    <td>{{ r.id }}</td>
                    {# Utilisation du format CamelCase pour correspondre aux getters de l'entité #}
                    <td>{{ r.nomPatient|upper }}</td> 
                    <td>{{ r.cin }}</td>
                    <td>{{ r.nomPsychologue }}</td>
                    <td>{{ r.date|date('d/m/Y H:i') }}</td>
                    <td>
                        <a href="{{ path('app_rendez_vous_edit', {id: r.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}