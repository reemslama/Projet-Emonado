{% extends 'base.html.twig' %}

{% block title %}Analyse émotionnelle{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-success fw-bold mb-0">
            Analyse émotionnelle
        </h2>
        <div class="d-flex gap-2">
            <a href="{{ path('app_analyse_emotionnelle_index') }}" class="btn btn-outline-secondary">
                <i class="fa-solid fa-list"></i> Toutes les analyses
            </a>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        <i class="fa-solid fa-face-smile text-warning me-2"></i>
                        Émotion principale
                    </h5>
                    <p class="fs-4 fw-bold text-capitalize">
                        {{ analyse_emotionnelle.emotionPrincipale|default('Non déterminée') }}
                    </p>
                    <p class="text-muted mb-0">
                        Détectée le
                        {{ analyse_emotionnelle.dateAnalyse ? analyse_emotionnelle.dateAnalyse|date('d/m/Y H:i') : '—' }}
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        <i class="fa-solid fa-heart-pulse text-danger me-2"></i>
                        Niveau de stress
                    </h5>
                    <p class="mb-2">
                        <span class="badge bg-danger-subtle text-danger border border-danger-subtle px-3 py-2">
                            {{ analyse_emotionnelle.niveauStress }}/10
                        </span>
                    </p>
                    <small class="text-muted">
                        0 = aucun stress, 10 = stress très élevé.
                    </small>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        <i class="fa-solid fa-leaf text-success me-2"></i>
                        Score de bien‑être
                    </h5>
                    <div class="mb-2">
                        <div class="progress" style="height: 12px;">
                            {% set score = analyse_emotionnelle.scoreBienEtre ?? 0 %}
                            <div class="progress-bar bg-success"
                                 role="progressbar"
                                 style="width: {{ score }}%;"
                                 aria-valuenow="{{ score }}"
                                 aria-valuemin="0"
                                 aria-valuemax="100">
                            </div>
                        </div>
                    </div>
                    <p class="mb-0">
                        <strong>{{ score }}/100</strong>
                        <span class="text-muted ms-1">(plus le score est élevé, meilleur est le bien‑être global)</span>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 mt-4">
        <div class="card-body">
            <h5 class="card-title mb-3">
                <i class="fa-solid fa-brain text-primary me-2"></i>
                Synthèse de l'IA
            </h5>
            <p class="mb-0">
                {{ analyse_emotionnelle.resumeIA|default('Aucun résumé IA disponible.') }}
            </p>
        </div>
    </div>

    {% if analyse_emotionnelle.journal is defined and analyse_emotionnelle.journal %}
        <div class="card shadow-sm border-0 mt-4">
            <div class="card-header bg-light d-flex justify-content-between align-items-center">
                <span class="fw-semibold">
                    Extrait du journal analysé
                </span>
                <span class="badge bg-outline-success text-success">
                    {{ analyse_emotionnelle.journal.dateCreation ? analyse_emotionnelle.journal.dateCreation|date('d/m/Y') : '' }}
                </span>
            </div>
            <div class="card-body">
                <p class="mb-0">
                    {{ analyse_emotionnelle.journal.contenu|slice(0, 400) }}{% if analyse_emotionnelle.journal.contenu|length > 400 %}...{% endif %}
                </p>
            </div>
        </div>
    {% endif %}
{% endblock %}
