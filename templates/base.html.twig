<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}EmoNado{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a2e1f6b6da.js" crossorigin="anonymous"></script>

    <style>
        body { 
            padding-top: 70px; 
            background-image: url('{{ asset('images/background.png') }}');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: fixed;
            min-height: 100vh;
        }
        .navbar-brand { font-weight: bold; }
        .btn-custom { border-radius: 50px; padding: 10px 30px; }
    </style>

    {% block stylesheets %}{% endblock %}
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-success fixed-top">
        <div class="container">
            <a class="navbar-brand" href="{{ path('app_home') }}">EmoNado</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_home') }}">Accueil</a></li>
                    {% if app.user %}
                        {% if is_granted('ROLE_PATIENT') %}
                            <li class="nav-item"><a class="nav-link" href="{{ path('patient_index') }}"><i class="fas fa-user"></i> Mon espace</a></li>
                        {% elseif is_granted('ROLE_PSYCHOLOGUE') %}
                            <li class="nav-item"><a class="nav-link" href="{{ path('psychologue_index') }}"><i class="fas fa-user-md"></i> Tableau de bord</a></li>
                        {% elseif is_granted('ROLE_ADMIN') %}
                            <li class="nav-item"><a class="nav-link" href="{{ path('admin_dashboard') }}"><i class="fas fa-cog"></i> Administration</a></li>
                        {% endif %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}"><i class="fas fa-sign-out-alt"></i> DÃ©connexion</a>
                        </li>
                    {% else %}
                        <li class="nav-item"><a class="nav-link" href="{{ path('app_login') }}">Connexion</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('app_register') }}">S'inscrire</a></li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        {% block body %}{% endblock %}
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    {% block javascripts %}{% endblock %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
</body>
</html>