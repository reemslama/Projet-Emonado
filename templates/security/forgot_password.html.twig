{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
<main class="login-container">
  <section class="login-wrapper">
    <h2 class="mb-4">Mot de passe oublié</h2>
    <p class="text-muted small mb-3">Indiquez votre adresse email. Nous vous enverrons un lien pour réinitialiser votre mot de passe (valide 1 heure).</p>

    {% if errors|length > 0 %}
      <div class="alert alert-danger">
        <ul class="mb-0 list-unstyled">
          {% for message in errors %}
            <li>{{ message }}</li>
          {% endfor %}
        </ul>
      </div>
    {% endif %}

    <form method="post" class="login-form" novalidate>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="text" name="email" id="email" class="form-control" placeholder="Votre email" value="{{ email|default('') }}" autocomplete="email">
      </div>
      <button type="submit" class="btn btn-success w-100">Envoyer le lien par email</button>
    </form>

    <div class="mt-3 text-center">
      <a href="{{ path('app_login') }}" class="small">Retour à la connexion</a>
    </div>
  </section>
</main>

<style>
body { background-color: #f8f8f8; }
.login-container { display: flex; justify-content: center; align-items: center; min-height: 100vh; padding: 20px; }
.login-wrapper {
  background-color: rgba(221, 245, 131, 0.27);
  border-radius: 25px;
  padding: 30px 20px;
  box-shadow: 0 8px 16px rgba(0,0,0,0.1);
  width: 100%;
  max-width: 400px;
}
.login-form { display: flex; flex-direction: column; gap: 20px; width: 100%; }
</style>
{% endblock %}
