{% extends 'base.html.twig' %}

{% block title %}Nouveau mot de passe{% endblock %}

{% block body %}
<main class="login-container">
  <section class="login-wrapper">
    <h2 class="mb-4">Choisir un nouveau mot de passe</h2>
    <p class="text-muted small mb-3">Saisissez votre nouveau mot de passe ci-dessous. Vous pourrez ensuite vous connecter avec.</p>

    {% if errors|length > 0 %}
      <div class="alert alert-danger">
        <ul class="mb-0 list-unstyled">
          {% for message in errors %}
            <li>{{ message }}</li>
          {% endfor %}
        </ul>
      </div>
    {% endif %}

    <form method="post" class="login-form" novalidate>
      <input type="hidden" name="_csrf_token" value="{{ csrf_token('reset_password') }}">
      <div class="mb-3">
        <label for="password" class="form-label">Nouveau mot de passe</label>
        <input type="password" name="password" id="password" class="form-control" placeholder="Au moins 6 caractères" autocomplete="new-password">
      </div>
      <div class="mb-3">
        <label for="password_confirm" class="form-label">Confirmer le mot de passe</label>
        <input type="password" name="password_confirm" id="password_confirm" class="form-control" placeholder="Répétez le mot de passe" autocomplete="new-password">
      </div>
      <button type="submit" class="btn btn-success w-100">Enregistrer le mot de passe</button>
    </form>

    <div class="mt-3 text-center">
      <a href="{{ path('app_login') }}" class="small">Retour à la connexion</a>
    </div>
  </section>
</main>

<style>
body { background-color: #f8f8f8; }
.login-container { display: flex; justify-content: center; align-items: center; min-height: 100vh; padding: 20px; }
.login-wrapper {
  background-color: rgba(221, 245, 131, 0.27);
  border-radius: 25px;
  padding: 30px 20px;
  box-shadow: 0 8px 16px rgba(0,0,0,0.1);
  width: 100%;
  max-width: 400px;
}
.login-form { display: flex; flex-direction: column; gap: 20px; width: 100%; }
</style>
{% endblock %}
