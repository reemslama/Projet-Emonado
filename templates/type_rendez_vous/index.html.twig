{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Types de rendez-vous</h2>
        <a href="{{ path('app_type_rendez_vous_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nouveau type
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Libellé</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    {% for type in types %}
                        <tr>
                            <td class="fw-bold">{{ type.libelle }}</td>
                            <td>
                                {% if type.description %}
                                    {{ type.description }}
                                {% else %}
                                    <span class="text-muted fst-italic">Aucune description</span>
                                {% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="2" class="text-center py-5 text-muted fst-italic">
                                <i class="fas fa-folder-open fa-2x mb-3"></i><br>
                                Aucun type de rendez-vous trouvé.
                                <br>
                                <a href="{{ path('app_type_rendez_vous_new') }}" class="btn btn-primary btn-sm mt-3">
                                    Créer le premier type
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}