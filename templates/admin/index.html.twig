{% extends 'base_admin.html.twig' %}

{% block title %}Dashboard Admin{% endblock %}

{% block header %}Dashboard{% endblock %}

{% block body %}
<div class="container-fluid">
    {# Statistiques anonymisées (audit / conformité) #}
    {% if stats is defined %}
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card border-0 bg-light">
                <div class="card-body text-center">
                    <h5 class="text-muted small">Dossiers actifs</h5>
                    <h2 class="mb-0">{{ stats.dossiers_actifs }}</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 bg-light">
                <div class="card-body text-center">
                    <h5 class="text-muted small">Consultations cette semaine</h5>
                    <h2 class="mb-0">{{ stats.consultations_semaine }}</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 bg-light">
                <div class="card-body text-center">
                    <h5 class="text-muted small">Consultations aujourd'hui</h5>
                    <h2 class="mb-0">{{ stats.consultations_aujourdhui }}</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="mb-3">
        <a href="{{ path('admin_logs') }}" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-journal-text"></i> Logs de connexion et modifications
        </a>
    </div>
    {% endif %}

    <div class="row mb-4">
        <div class="col-auto">
            <a href="{{ path('admin_user_add') }}" class="btn btn-success">
                <i class="bi bi-person-plus"></i> Ajouter un utilisateur
            </a>
        </div>
    </div>

    {# ========== PATIENTS ========== #}
    <div id="patients" class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h2 class="h4 mb-0">
                <i class="bi bi-people-fill"></i> Patients
            </h2>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Email</th>
                            <th>Téléphone</th>
                            <th width="200">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if patients is empty %}
                            <tr>
                                <td colspan="5" class="text-center text-muted">Aucun patient trouvé.</td>
                            </tr>
                        {% else %}
                            {% for patient in patients %}
                            <tr>
                                <td>{{ patient.nom }}</td>
                                <td>{{ patient.prenom }}</td>
                                <td>{{ patient.email }}</td>
                                <td>{{ patient.telephone ?? 'N/A' }}</td>
                                <td>
                                    <a href="{{ path('admin_user_edit', {id: patient.id}) }}" 
                                       class="btn btn-sm btn-warning me-1">
                                        <i class="bi bi-pencil"></i> Modifier
                                    </a>
                                    <form method="post" action="{{ path('admin_user_delete', {id: patient.id}) }}" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ patient.id) }}">
                                        <button type="submit" 
                                                class="btn btn-sm btn-danger" 
                                                onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?')">
                                            <i class="bi bi-trash"></i> Supprimer
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            {% endfor %}
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {# ========== DOSSIERS MÉDICAUX ET CONSULTATIONS (par patient) ========== #}
    <div id="dossiers" class="card shadow-sm mb-4">
        <div class="card-header bg-warning text-dark">
            <h2 class="h4 mb-0">
                <i class="bi bi-folder2-open"></i> Dossiers médicaux et consultations
            </h2>
        </div>
        <div class="card-body">
            {% if patients is empty %}
                <p class="text-muted mb-0">Aucun patient. Les dossiers et consultations s'afficheront ici par patient.</p>
            {% else %}
                {% for patient in patients %}
                    {% set info = dossiersParPatient[patient.id] ?? null %}
                    <div class="border rounded p-3 mb-3">
                        <h6 class="mb-2">
                            <i class="bi bi-person-fill"></i> 
                            {{ patient.nom }} {{ patient.prenom }}
                            <span class="badge bg-secondary">{{ patient.email }}</span>
                        </h6>
                        {% if info %}
                            <div class="ms-3">
                                <p class="mb-1">
                                    <strong><i class="bi bi-folder2"></i> Dossier médical :</strong>
                                    {% if info.dossier %}
                                        Créé le {{ info.dossier.createdAt|date('d/m/Y H:i') }}
                                        {% if info.dossier.updatedAt %}
                                            | Dernière MAJ : {{ info.dossier.updatedAt|date('d/m/Y H:i') }}
                                        {% endif %}
                                    {% else %}
                                        <span class="text-muted">Aucun dossier</span>
                                    {% endif %}
                                </p>
                                <p class="mb-2">
                                    <strong><i class="bi bi-calendar-check"></i> Consultations :</strong>
                                    <span class="badge bg-info">{{ info.consultations|length }}</span>
                                </p>
                                {% if info.consultations|length > 0 %}
                                    <div class="table-responsive ms-2 mb-0">
                                        <table class="table table-sm table-bordered">
                                            <thead class="table-light">
                                                <tr>
                                                    <th>Date</th>
                                                    <th>Compte rendu</th>
                                                    <th>Psychologue</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for c in info.consultations|slice(0, 5) %}
                                                <tr>
                                                    <td>{{ c.date ? c.date|date('d/m/Y') : '-' }}</td>
                                                    <td>{{ c.compteRendu ? (c.compteRendu|slice(0, 60)) ~ (c.compteRendu|length > 60 ? '...' : '') : '-' }}</td>
                                                    <td>{% if c.psychologue %}{{ c.psychologue.nom }} {{ c.psychologue.prenom }}{% else %}-{% endif %}</td>
                                                </tr>
                                                {% endfor %}
                                                {% if info.consultations|length > 5 %}
                                                <tr><td colspan="3" class="text-center text-muted">+ {{ info.consultations|length - 5 }} autre(s)</td></tr>
                                                {% endif %}
                                            </tbody>
                                        </table>
                                    </div>
                                {% else %}
                                    <p class="text-muted mb-0 ms-2">Aucune consultation enregistrée.</p>
                                {% endif %}
                            </div>
                        {% else %}
                            <p class="text-muted mb-0 ms-3">Aucun dossier médical pour ce patient.</p>
                        {% endif %}
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>

    {# ========== PSYCHOLOGUES ========== #}
    <div id="psychologues" class="card shadow-sm mb-4">
        <div class="card-header bg-success text-white">
            <h2 class="h4 mb-0">
                <i class="bi bi-person-badge-fill"></i> Psychologues
            </h2>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Email</th>
                            <th>Spécialité</th>
                            <th>Téléphone</th>
                            <th width="200">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if psychologues is empty %}
                            <tr>
                                <td colspan="6" class="text-center text-muted">Aucun psychologue trouvé.</td>
                            </tr>
                        {% else %}
                            {% for psy in psychologues %}
                            <tr>
                                <td>{{ psy.nom }}</td>
                                <td>{{ psy.prenom }}</td>
                                <td>{{ psy.email }}</td>
                                <td>{{ psy.specialite ?? 'N/A' }}</td>
                                <td>{{ psy.telephone ?? 'N/A' }}</td>
                                <td>
                                    <a href="{{ path('admin_user_edit', {id: psy.id}) }}" 
                                       class="btn btn-sm btn-warning me-1">
                                        <i class="bi bi-pencil"></i> Modifier
                                    </a>
                                    <form method="post" action="{{ path('admin_user_delete', {id: psy.id}) }}" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ psy.id) }}">
                                        <button type="submit" 
                                                class="btn btn-sm btn-danger" 
                                                onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?')">
                                            <i class="bi bi-trash"></i> Supprimer
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            {% endfor %}
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {# ========== QUESTIONS ========== #}
    <div id="questions" class="card shadow-sm mb-4">
        <div class="card-header bg-info text-white">
            <h2 class="h4 mb-0">
                <i class="bi bi-question-circle-fill"></i> Questions du Questionnaire
            </h2>
        </div>
        <div class="card-body">
            {# Barre d'actions et filtres #}
            <div class="row mb-3 g-2">
                <div class="col-md-4">
                    <a href="{{ path('app_question_new') }}" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Ajouter une question
                    </a>
                </div>
                
                {# BARRE DE RECHERCHE #}
                <div class="col-md-4">
                    <form method="get" action="{{ path('admin_dashboard') }}" id="searchForm">
                        <div class="input-group">
                            <span class="input-group-text bg-white">
                                <i class="bi bi-search"></i>
                            </span>
                            <input type="text" 
                                   name="search"
                                   id="searchQuestion" 
                                   class="form-control" 
                                   placeholder="Rechercher une question..."
                                   value="{{ searchKeyword }}">
                            {% if searchKeyword %}
                                <button type="button" class="btn btn-outline-secondary" id="clearSearch">
                                    <i class="bi bi-x-lg"></i>
                                </button>
                            {% endif %}
                        </div>
                    </form>
                </div>

                {# FILTRE PAR CATÉGORIE #}
                <div class="col-md-4">
                    <form method="get" action="{{ path('admin_dashboard') }}" class="d-flex align-items-center" id="categoryForm">
                        {% if searchKeyword %}
                            <input type="hidden" name="search" value="{{ searchKeyword }}">
                        {% endif %}
                        <label for="categorie" class="me-2 mb-0 text-nowrap">
                            <i class="bi bi-funnel"></i> Catégorie :
                        </label>
                        <select name="categorie" id="categorie" class="form-select">
                            <option value="all" {% if categorieFilter == 'all' %}selected{% endif %}>
                                Toutes
                            </option>
                            {% for cat in categories %}
                                <option value="{{ cat }}" {% if categorieFilter == cat %}selected{% endif %}>
                                    {{ cat|capitalize }}
                                </option>
                            {% endfor %}
                        </select>
                    </form>
                </div>
            </div>

            {# Badges de filtres actifs #}
            <div class="mb-3">
                {% if searchKeyword %}
                <div class="alert alert-warning alert-dismissible fade show d-inline-block me-2" role="alert">
                    <i class="bi bi-search"></i>
                    Recherche : <strong>"{{ searchKeyword }}"</strong>
                    <a href="{{ path('admin_dashboard', {categorie: categorieFilter}) }}" class="btn btn-sm btn-outline-dark ms-2">
                        <i class="bi bi-x-circle"></i> Effacer
                    </a>
                </div>
                {% endif %}

                {% if categorieFilter != 'all' %}
                <div class="alert alert-info alert-dismissible fade show d-inline-block" role="alert">
                    <i class="bi bi-funnel-fill"></i>
                    Catégorie : <strong>{{ categorieFilter|capitalize }}</strong>
                    <a href="{{ path('admin_dashboard', {search: searchKeyword}) }}" class="btn btn-sm btn-outline-primary ms-2">
                        <i class="bi bi-x-circle"></i> Tout afficher
                    </a>
                </div>
                {% endif %}
            </div>

            {# Indicateur de chargement #}
            <div id="loadingSpinner" class="d-none text-center my-3">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Chargement...</span>
                </div>
            </div>

            {# Tableau des questions #}
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle" id="questionsTable">
                    <thead class="table-dark">
                        <tr>
                            <th style="width: 50px;" data-sort="id" title="Cliquer pour trier">#</th>
                            <th data-sort="texte" title="Cliquer pour trier">Texte de la question</th>
                            <th style="width: 120px;" data-sort="categorie" title="Cliquer pour trier">Catégorie</th>
                            <th style="width: 100px;">Type</th>
                            <th style="width: 80px;" data-sort="ordre" title="Cliquer pour trier">Ordre</th>
                            <th style="width: 100px;">Réponses</th>
                            <th style="width: 280px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if questions is empty %}
                            <tr>
                                <td colspan="7" class="text-center text-muted py-4">
                                    <i class="bi bi-inbox" style="font-size: 2rem;"></i>
                                    <p class="mt-2 mb-0">
                                        {% if searchKeyword %}
                                            Aucune question trouvée pour "<strong>{{ searchKeyword }}</strong>".
                                        {% elseif categorieFilter != 'all' %}
                                            Aucune question dans la catégorie "<strong>{{ categorieFilter }}</strong>".
                                        {% else %}
                                            Aucune question trouvée.
                                        {% endif %}
                                    </p>
                                </td>
                            </tr>
                        {% else %}
                            {% for question in questions %}
                            <tr>
                                <td class="text-center">{{ question.id }}</td>
                                <td>
                                    {% if question.texte|length > 80 %}
                                        {{ question.texte|slice(0, 80) }}...
                                    {% else %}
                                        {{ question.texte }}
                                    {% endif %}
                                </td>
                                <td>
                                    <span class="badge bg-primary">
                                        {{ question.categorie|capitalize }}
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">
                                        {{ question.typeQuestion }}
                                    </span>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-dark">{{ question.ordre }}</span>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-info">
                                        {{ question.reponses|length }}
                                    </span>
                                </td>
                                <td>
                                    <a href="{{ path('app_question_show', {id: question.id}) }}" 
                                       class="btn btn-sm btn-info me-1" 
                                       title="Voir les détails">
                                        <i class="bi bi-eye"></i> Voir
                                    </a>
                                    <a href="{{ path('app_question_edit', {id: question.id}) }}" 
                                       class="btn btn-sm btn-warning me-1" 
                                       title="Modifier">
                                        <i class="bi bi-pencil"></i> Modifier
                                    </a>
                                    <form method="post" action="{{ path('app_question_delete', {id: question.id}) }}" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ question.id) }}">
                                        <button type="submit" 
                                                class="btn btn-sm btn-danger" 
                                                onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette question et toutes ses réponses ?')"
                                                title="Supprimer">
                                            <i class="bi bi-trash"></i> Supprimer
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            {% endfor %}
                        {% endif %}
                    </tbody>
                </table>
            </div>

            {# Compteur de résultats #}
            <div class="mt-3">
                <p class="text-muted mb-0">
                    <i class="bi bi-file-earmark-text"></i>
                    <span id="resultsCount"><strong>{{ questions|length }}</strong> question(s) affichée(s)</span>
                    {% if searchKeyword %}
                        pour "<strong>{{ searchKeyword }}</strong>"
                    {% endif %}
                    {% if categorieFilter != 'all' %}
                        dans la catégorie "<strong>{{ categorieFilter }}</strong>"
                    {% endif %}
                </p>
            </div>
        </div>
    </div>
</div>

<style>
    /* Améliorer la lisibilité des boutons */
    .btn-sm {
        font-size: 0.875rem;
        padding: 0.25rem 0.5rem;
        white-space: nowrap;
    }
    
    /* Éviter le retour à la ligne dans les cellules d'actions */
    td form {
        margin: 0;
    }
    
    /* Aligner verticalement le contenu des cellules */
    .align-middle {
        vertical-align: middle !important;
    }

    /* Style pour la barre de recherche */
    #searchQuestion {
        border-left: none;
    }

    #searchQuestion:focus {
        box-shadow: none;
        border-color: #dee2e6;
    }

    .input-group:focus-within .input-group-text {
        border-color: #86b7fe;
    }

    /* Style pour les badges d'alertes */
    .alert.d-inline-block {
        padding: 0.5rem 1rem;
        margin-bottom: 0;
    }

    /* Style pour les en-têtes de tableau cliquables (tri) */
    #questionsTable thead th[data-sort] {
        cursor: pointer;
        user-select: none;
        transition: background-color 0.2s;
    }

    #questionsTable thead th[data-sort]:hover {
        background-color: rgba(255, 255, 255, 0.1);
    }

    #questionsTable thead th[data-sort] .sort-icon {
        font-size: 0.8em;
        opacity: 0.8;
    }

    /* Style pour le spinner de chargement */
    #loadingSpinner {
        padding: 2rem;
    }
</style>

<script src="{{ asset('js/admin-questions-ajax.js') }}"></script>
{% endblock %}