{% extends 'base_admin.html.twig' %}

{% block title %}Gestion des Réponses{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-chat-square-text"></i> Gestion des Réponses</h1>
        <a href="{{ path('admin_reponse_new') }}" class="btn btn-success btn-lg">
            <i class="bi bi-plus-circle"></i> Ajouter une réponse
        </a>
    </div>

    {# Barre de recherche #}
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-10">
                    <input type="text" 
                           name="search" 
                           class="form-control" 
                           placeholder="Rechercher une réponse ou une question..."
                           value="{{ searchKeyword }}">
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Rechercher
                    </button>
                </div>
            </form>
        </div>
    </div>

    {# Messages flash #}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle-fill"></i> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle-fill"></i> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {# Tableau des réponses #}
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Texte</th>
                            <th>Valeur</th>
                            <th>Question associée</th>
                            <th>Catégorie</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if reponses is empty %}
                            <tr>
                                <td colspan="6" class="text-center text-muted py-5">
                                    <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                                    <p class="mt-3">Aucune réponse trouvée</p>
                                </td>
                            </tr>
                        {% else %}
                            {% for reponse in reponses %}
                            <tr>
                                <td>{{ reponse.id }}</td>
                                <td>
                                    <strong>{{ reponse.texte }}</strong>
                                </td>
                                <td>
                                    <span class="badge bg-info">{{ reponse.valeur }} pts</span>
                                </td>
                                <td>
                                    {% if reponse.question %}
                                        <small class="text-muted">
                                            #{{ reponse.question.id }} - {{ reponse.question.texte|length > 50 ? reponse.question.texte|slice(0, 50) ~ '...' : reponse.question.texte }}
                                        </small>
                                    {% else %}
                                        <span class="text-danger">Non associée</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if reponse.question %}
                                        <span class="badge 
                                            {% if reponse.question.categorie == 'stress' %}bg-danger
                                            {% elseif reponse.question.categorie == 'depression' %}bg-primary
                                            {% elseif reponse.question.categorie == 'iq' %}bg-warning
                                            {% else %}bg-secondary
                                            {% endif %}">
                                            {{ reponse.question.categorie|capitalize }}
                                        </span>
                                    {% else %}
                                        -
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="{{ path('admin_reponse_show', {id: reponse.id}) }}" 
                                           class="btn btn-sm btn-info" title="Voir">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="{{ path('admin_reponse_edit', {id: reponse.id}) }}" 
                                           class="btn btn-sm btn-warning" title="Modifier">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button" 
                                                class="btn btn-sm btn-danger" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#deleteModal{{ reponse.id }}"
                                                title="Supprimer">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>

                                    {# Modal de confirmation de suppression #}
                                    <div class="modal fade" id="deleteModal{{ reponse.id }}" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Confirmer la suppression</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    Êtes-vous sûr de vouloir supprimer cette réponse ?<br>
                                                    <strong>"{{ reponse.texte }}"</strong>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                                    <form method="post" action="{{ path('admin_reponse_delete', {id: reponse.id}) }}" style="display: inline;">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reponse.id) }}">
                                                        <button type="submit" class="btn btn-danger">Supprimer</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                        {% endif %}
                    </tbody>
                </table>
            </div>

            <div class="mt-3">
                <p class="text-muted">
                    <i class="bi bi-info-circle"></i> 
                    Total : <strong>{{ reponses|length }}</strong> réponse(s)
                </p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
