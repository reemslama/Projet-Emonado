{% extends 'base.html.twig' %}

{% block title %}Test {{ categorie|capitalize }}{% endblock %}

{% block body %}
{# Header simple avec icône selon la catégorie #}
<div class="text-center mb-4">
    {% if categorie == 'stress' %}
        <i class="fa-solid fa-face-frown text-danger mb-3" style="font-size: 4rem;"></i>
        <h1 class="text-danger fw-bold">Test de Stress</h1>
    {% elseif categorie == 'depression' %}
        <i class="fa-solid fa-heart-pulse text-primary mb-3" style="font-size: 4rem;"></i>
        <h1 class="text-primary fw-bold">Test de Dépression</h1>
    {% elseif categorie == 'iq' %}
        <i class="fa-solid fa-lightbulb text-warning mb-3" style="font-size: 4rem;"></i>
        <h1 class="text-warning fw-bold">Test de QI</h1>
    {% endif %}
    <hr class="divider mx-auto" style="width: 100px; height: 3px; background-color: 
        {% if categorie == 'stress' %}#dc3545
        {% elseif categorie == 'depression' %}#0d6efd
        {% else %}#ffc107
        {% endif %};" />
    <p class="text-muted lead mt-3">
        {{ questions|length }} question(s) à répondre
    </p>
</div>

{# Barre de progression #}
<div class="row justify-content-center mb-4">
    <div class="col-lg-10">
        <div class="progress" style="height: 25px;">
            <div class="progress-bar 
                {% if categorie == 'stress' %}bg-danger
                {% elseif categorie == 'depression' %}bg-primary
                {% else %}bg-warning
                {% endif %}" 
                role="progressbar" 
                id="progressBar" 
                style="width: 0%;" 
                aria-valuenow="0" 
                aria-valuemin="0" 
                aria-valuemax="100">
                <span id="progressText">0 / {{ questions|length }}</span>
            </div>
        </div>
    </div>
</div>

{# Formulaire avec toutes les questions #}
<form method="post" action="{{ path('app_resultat') }}" id="testForm" novalidate>
    
    {% for question in questions %}
    <div class="row justify-content-center mb-4 fade-in-up question-block" data-question-id="{{ question.id }}" style="animation-delay: {{ loop.index0 * 0.1 }}s;">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0">
                <div class="card-header 
                    {% if categorie == 'stress' %}bg-danger
                    {% elseif categorie == 'depression' %}bg-primary
                    {% else %}bg-warning
                    {% endif %} text-white">
                    <h4 class="mb-0">
                        <i class="fa-solid fa-circle-question"></i> 
                        Question {{ loop.index }} / {{ questions|length }}
                    </h4>
                </div>
                <div class="card-body p-4">
                    <h5 class="mb-4">{{ question.texte }}</h5>
                    
                    {# Message d'erreur pour cette question #}
                    <div class="alert alert-danger d-none error-message" id="error_q{{ question.id }}">
                        <i class="fa-solid fa-triangle-exclamation"></i> 
                        Veuillez sélectionner une réponse pour cette question
                    </div>
                    
                    <div class="row g-3">
                        {% for reponse in question.reponses %}
                        <div class="col-12">
                            <div class="answer-card p-3 border rounded-3" onclick="selectAnswer({{ question.id }}, {{ loop.index0 }})">
                                <div class="form-check">
                                    <input class="form-check-input" 
                                           type="radio" 
                                           name="question_{{ question.id }}" 
                                           id="q{{ question.id }}_r{{ loop.index0 }}" 
                                           value="{{ reponse.valeur }}" 
                                           data-question="{{ question.id }}"
                                           required>
                                    <label class="form-check-label w-100" for="q{{ question.id }}_r{{ loop.index0 }}">
                                        {{ reponse.texte }}
                                    </label>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}

    {# Message d'erreur global #}
    <div class="row justify-content-center mb-3">
        <div class="col-lg-10">
            <div class="alert alert-danger d-none" id="globalError">
                <i class="fa-solid fa-circle-exclamation"></i>
                <strong>Attention !</strong> Vous devez répondre à toutes les questions avant de soumettre le test.
                <div class="mt-2" id="missingQuestionsList"></div>
            </div>
        </div>
    </div>

    {# Bouton de soumission #}
    <div class="row justify-content-center mt-5 mb-5">
        <div class="col-lg-10 text-center">
            <button type="submit" 
                    class="btn 
                    {% if categorie == 'stress' %}btn-danger
                    {% elseif categorie == 'depression' %}btn-primary
                    {% else %}btn-warning
                    {% endif %} btn-lg btn-custom px-5" 
                    id="submitBtn">
                <i class="fa-solid fa-circle-check"></i> Voir mon résultat
            </button>
            <p class="text-muted mt-2" id="warningText">
                <i class="fa-solid fa-circle-info"></i> Veuillez répondre à toutes les questions
            </p>
        </div>
    </div>
</form>
{% endblock %}

{% block javascripts %}
<script>
// Données des questions
const totalQuestions = {{ questions|length }};
const questionIds = [
    {% for question in questions %}
        {{ question.id }}{% if not loop.last %},{% endif %}
    {% endfor %}
];

function selectAnswer(questionId, answerIndex) {
    // Retirer la classe selected de toutes les cartes de cette question
    document.querySelectorAll(`input[name="question_${questionId}"]`).forEach((input) => {
        input.closest('.answer-card').classList.remove('selected');
    });
    
    // Ajouter la classe selected à la carte cliquée
    const selectedInput = document.getElementById(`q${questionId}_r${answerIndex}`);
    selectedInput.closest('.answer-card').classList.add('selected');
    
    // Cocher le radio button
    selectedInput.checked = true;
    
    // Retirer le message d'erreur de cette question
    const errorMsg = document.getElementById(`error_q${questionId}`);
    if (errorMsg) {
        errorMsg.classList.add('d-none');
    }
    
    // Retirer la bordure rouge de la carte
    const questionCard = document.querySelector(`[data-question-id="${questionId}"] .card`);
    if (questionCard) {
        questionCard.classList.remove('border-danger');
        questionCard.style.borderWidth = '';
    }
    
    // Vérifier si toutes les questions ont été répondues
    checkAllAnswered();
}

function checkAllAnswered() {
    const questionGroups = document.querySelectorAll('input[type="radio"]:checked');
    
    // Compter les groupes uniques de questions répondues
    const answeredQuestions = new Set();
    questionGroups.forEach(input => {
        answeredQuestions.add(input.name);
    });
    
    // Mettre à jour la barre de progression
    const progressBar = document.getElementById('progressBar');
    const progressText = document.getElementById('progressText');
    const percentage = (answeredQuestions.size / totalQuestions) * 100;
    
    progressBar.style.width = percentage + '%';
    progressBar.setAttribute('aria-valuenow', percentage);
    progressText.textContent = answeredQuestions.size + ' / ' + totalQuestions;
    
    // Mettre à jour le message d'avertissement
    const warningText = document.getElementById('warningText');
    
    if (answeredQuestions.size === totalQuestions) {
        warningText.innerHTML = '<i class="fa-solid fa-circle-check text-success"></i> Toutes les questions ont été répondues !';
        warningText.classList.remove('text-muted');
        warningText.classList.add('text-success');
    } else {
        warningText.innerHTML = '<i class="fa-solid fa-circle-info"></i> ' + answeredQuestions.size + ' / ' + totalQuestions + ' questions répondues';
        warningText.classList.remove('text-success');
        warningText.classList.add('text-muted');
    }
}

// Validation du formulaire
document.getElementById('testForm').addEventListener('submit', function(e) {
    e.preventDefault();
    
    // Masquer le message d'erreur global
    document.getElementById('globalError').classList.add('d-none');
    
    // Réinitialiser toutes les bordures rouges
    document.querySelectorAll('.card.border-danger').forEach(card => {
        card.classList.remove('border-danger');
        card.style.borderWidth = '';
    });
    
    // Vérifier chaque question
    const unansweredQuestions = [];
    
    questionIds.forEach(questionId => {
        const answered = document.querySelector(`input[name="question_${questionId}"]:checked`);
        
        if (!answered) {
            unansweredQuestions.push(questionId);
            
            // Afficher le message d'erreur pour cette question
            const errorMsg = document.getElementById(`error_q${questionId}`);
            if (errorMsg) {
                errorMsg.classList.remove('d-none');
            }
            
            // Ajouter une bordure rouge à la carte
            const questionCard = document.querySelector(`[data-question-id="${questionId}"] .card`);
            if (questionCard) {
                questionCard.classList.add('border-danger');
                questionCard.style.borderWidth = '3px';
            }
        }
    });
    
    // Si des questions ne sont pas répondues
    if (unansweredQuestions.length > 0) {
        // Afficher le message d'erreur global
        const globalError = document.getElementById('globalError');
        globalError.classList.remove('d-none');
        
        // Lister les questions manquantes
        const missingList = document.getElementById('missingQuestionsList');
        const questionNumbers = unansweredQuestions.map(id => {
            return questionIds.indexOf(id) + 1;
        });
        missingList.innerHTML = '<strong>Questions non répondues :</strong> ' + questionNumbers.join(', ');
        
        // Scroll vers la première question non répondue
        const firstUnanswered = document.querySelector(`[data-question-id="${unansweredQuestions[0]}"]`);
        if (firstUnanswered) {
            firstUnanswered.scrollIntoView({ behavior: 'smooth', block: 'center' });
        }
        
        return false;
    }
    
    // Si tout est bon, soumettre le formulaire
    this.submit();
});

// Animation au chargement
document.addEventListener('DOMContentLoaded', function() {
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.style.opacity = '1';
                entry.target.style.transform = 'translateY(0)';
            }
        });
    });

    document.querySelectorAll('.fade-in-up').forEach(card => {
        card.style.opacity = '0';
        card.style.transform = 'translateY(20px)';
        card.style.transition = 'all 0.5s ease';
        observer.observe(card);
    });
});
</script>
{% endblock %}

{% block stylesheets %}
<style>
.answer-card {
    transition: all 0.3s ease;
    cursor: pointer;
}

.answer-card:hover {
    background-color: #f8f9fa;
    border-color: #198754 !important;
    transform: translateX(5px);
}

.answer-card.selected {
    background-color: #d1f2eb;
    border-color: #198754 !important;
    border-width: 2px !important;
}

.form-check-input:checked ~ .form-check-label {
    font-weight: 600;
    color: #198754;
}

/* Style pour les questions avec erreur */
.card.border-danger {
    animation: shake 0.5s;
}

@keyframes shake {
    0%, 100% { transform: translateX(0); }
    10%, 30%, 50%, 70%, 90% { transform: translateX(-5px); }
    20%, 40%, 60%, 80% { transform: translateX(5px); }
}

/* Style pour le message d'erreur */
.error-message {
    font-size: 0.9rem;
    margin-bottom: 1rem;
}

/* Style pour la barre de progression */
.progress {
    border-radius: 10px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

.progress-bar {
    transition: width 0.5s ease;
    font-weight: bold;
    font-size: 14px;
}

.fade-in-up {
    animation: fadeInUp 0.8s ease forwards;
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.card {
    border-radius: 15px;
    transition: all 0.3s ease;
}
</style>
{% endblock %}
