<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Admin{% endblock %}</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            background: #f1f5f9;
        }

        .sidebar {
            position: fixed;
            height: 100vh;
            width: 240px;
            background: #111827;
            padding-top: 20px;
        }

        .sidebar a {
            display: block;
            padding: 12px 20px;
            color: #cbd5e1;
            text-decoration: none;
            transition: 0.3s;
        }

        .sidebar a:hover {
            background: #1f2937;
            color: white;
        }

        .main {
            margin-left: 240px;
            padding: 25px;
        }

        .topbar {
            background: white;
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 20px;
            box-shadow: 0 3px 10px rgba(0,0,0,0.05);
        }
    </style>
</head>

<body>

<div class="sidebar">
    <h5 class="text-center text-white mb-4">ADMIN PANEL</h5>

    <a href="{{ path('admin_dashboard') }}">
        <i class="bi bi-speedometer2"></i> Dashboard
    </a>

    <a href="{{ path('admin_dashboard') }}#patients">
        <i class="bi bi-people-fill"></i> Patients
    </a>

    <a href="{{ path('admin_dashboard') }}#psychologues">
        <i class="bi bi-person-badge-fill"></i> Psychologues
    </a>

    <a href="{{ path('admin_dashboard') }}#questions">
        <i class="bi bi-question-circle"></i> Questions
    </a>

    <a href="{{ path('admin_user_add') }}">
        <i class="bi bi-person-plus"></i> Ajouter Utilisateur
    </a>

    <a href="{{ path('app_question_new') }}">
        <i class="bi bi-plus-circle"></i> Ajouter Question
    </a>

    <hr class="text-white my-3" style="opacity: 0.3;">

    <a href="{{ path('app_logout') }}" class="text-danger">
        <i class="bi bi-box-arrow-right"></i> Logout
    </a>
</div>

<div class="main">

    <div class="topbar d-flex justify-content-between align-items-center">
        <h4 class="mb-0">{% block header %}Dashboard{% endblock %}</h4>
        <div>
            {% if app.user %}
                <span class="badge bg-primary">
                    <i class="bi bi-person-circle"></i> {{ app.user.email }}
                </span>
            {% elseif app.session.get('admin_username') %}
                <span class="badge bg-primary">
                    <i class="bi bi-person-circle"></i> {{ app.session.get('admin_username') }}
                </span>
            {% endif %}
        </div>
    </div>

    {% block body %}{% endblock %}

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
{% block javascripts %}{% endblock %}

</body>
</html>
