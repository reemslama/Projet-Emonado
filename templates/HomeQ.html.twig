<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="Questionnaire interactif" />
    <title>{% block title %}Questionnaire{% endblock %}</title>

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="{{ asset('assets/favicon.ico') }}" />

    <!-- ✅ Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- ✅ Bootstrap Icons (VERSION RÉCENTE) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Merriweather+Sans:400,700" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Merriweather:400,300,700" rel="stylesheet" />

    <!-- Template CSS -->
    <link href="{{ asset('css/styles.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/custom.css') }}" rel="stylesheet" />

    {% block stylesheets %}{% endblock %}
</head>

<body id="page-top">

<!-- ================= NAVBAR ================= -->
{% block navigation %}
<nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top shadow-sm">
    <div class="container">

        <a class="navbar-brand fw-bold" href="{{ path('app_home') }}">
            <i class="bi bi-clipboard-check text-primary"></i>
            Questionnaire
        </a>

        <button class="navbar-toggler" type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbarResponsive">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ms-auto">

                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_home') }}">
                        <i class="bi bi-house"></i> Accueil
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_choix') }}">
                        <i class="bi bi-play-circle"></i> Commencer
                    </a>
                </li>

            </ul>
        </div>

    </div>
</nav>
{% endblock %}

<!-- ================= FLASH ================= -->
<div class="container" style="margin-top: 90px;">
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ type }} alert-dismissible fade show">
                {{ message }}
                <button class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}
</div>

<!-- ================= BODY ================= -->
{% block body %}{% endblock %}

<!-- ================= FOOTER ================= -->
{% block footer %}
<footer class="bg-light py-4 mt-5 shadow-sm">
    <div class="container text-center small text-muted">
        © {{ "now"|date("Y") }} — Questionnaire App
    </div>
</footer>
{% endblock %}

<!-- ================= ADMIN MODAL ================= -->
{% if not app.request.session.get('admin_authenticated') %}
<div class="modal fade" id="adminLoginModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">
                    <i class="bi bi-shield-lock-fill"></i>
                    Connexion Admin
                </h5>
                <button class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <form method="post" action="{{ path('admin_login') }}">
                <div class="modal-body">

                    <div class="mb-3">
                        <label class="form-label">
                            <i class="bi bi-person"></i> Identifiant
                        </label>
                        <input type="text" name="username" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">
                            <i class="bi bi-lock"></i> Mot de passe
                        </label>
                        <input type="password" name="password" class="form-control" required>
                    </div>

                    <div class="alert alert-info small mb-0">
                        admin / admin123
                    </div>

                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">
                        Annuler
                    </button>
                    <button class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right"></i>
                        Se connecter
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>
{% endif %}

<!-- ================= JS ================= -->

<!-- ✅ Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<!-- Template JS -->
<script src="{{ asset('js/scripts.js') }}"></script>

{% block javascripts %}{% endblock %}
{% block importmap %}{{ importmap('app') }}{% endblock %}

</body>
</html>
