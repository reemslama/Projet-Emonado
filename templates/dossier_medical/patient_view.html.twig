<script>
function toggleConsultations() {
    const filters = document.getElementById('filters');
    filters.style.display = filters.style.display === 'none' ? 'block' : 'none';
}

function sortConsultations() {
    const sortSelect = document.getElementById('sortConsultations');
    const list = document.getElementById('consultationsList');
    if (!sortSelect || !list) return;
    const sortValue = sortSelect.value;
    const items = Array.from(list.querySelectorAll('.consultation-item'));

    items.sort((a, b) => {
        if (sortValue === 'date_desc') {
            return new Date(b.dataset.date) - new Date(a.dataset.date);
        } else if (sortValue === 'date_asc') {
            return new Date(a.dataset.date) - new Date(b.dataset.date);
        } else if (sortValue === 'psychologue') {
            return a.dataset.psychologue.localeCompare(b.dataset.psychologue);
        }
        return 0;
    });

    items.forEach(item => list.appendChild(item));
}

function filterConsultations() {
    const searchEl = document.getElementById('searchConsultations');
    const searchValue = (searchEl && searchEl.value) ? searchEl.value.toLowerCase() : '';
    const items = document.querySelectorAll('.consultation-item');

    items.forEach(item => {
        const notes = (item.dataset.notes || '').toLowerCase();
        const psychologue = (item.dataset.psychologue || '').toLowerCase();
        const h6 = item.querySelector('h6');
        const date = h6 ? h6.textContent.toLowerCase() : '';
        
        if (!searchValue || notes.includes(searchValue) || psychologue.includes(searchValue) || date.includes(searchValue)) {
            item.style.display = 'block';
        } else {
            item.style.display = 'none';
        }
    });
}

// Saisie vocale pour le compte rendu (dossier médical)
(function() {
    const textarea = document.getElementById('compte_rendu_dossier');
    const btn = document.getElementById('btnVoiceDossier');
    const statusEl = document.getElementById('voiceStatusDossier');
    if (!textarea || !btn) return;

    const SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;
    if (!SpeechRecognition) {
        if (statusEl) { statusEl.textContent = 'La saisie vocale n\'est pas supportée par ce navigateur (Chrome, Edge recommandés).'; statusEl.style.display = 'block'; }
        btn.disabled = true;
        btn.title = 'Saisie vocale non disponible';
        return;
    }

    const recognition = new SpeechRecognition();
    recognition.continuous = true;
    recognition.interimResults = true;
    recognition.lang = 'fr-FR';

    btn.addEventListener('click', function() {
        if (btn.classList.contains('recording')) {
            recognition.stop();
            return;
        }
        btn.classList.add('recording');
        btn.classList.remove('btn-outline-primary');
        btn.classList.add('btn-danger');
        btn.innerHTML = '<i class="fas fa-stop"></i> Arrêter';
        if (statusEl) { statusEl.textContent = 'Écoute en cours… Parlez.'; statusEl.style.display = 'block'; }
        recognition.start();
    });

    recognition.onresult = function(event) {
        let final = '';
        let interim = '';
        for (let i = event.resultIndex; i < event.results.length; i++) {
            const transcript = event.results[i][0].transcript;
            if (event.results[i].isFinal) {
                final += transcript;
            } else {
                interim += transcript;
            }
        }
        const cursor = textarea.selectionStart;
        const before = textarea.value.substring(0, cursor);
        const after = textarea.value.substring(cursor);
        textarea.value = before + (final || interim) + after;
        textarea.selectionStart = textarea.selectionEnd = before.length + (final || interim).length;
    };

    recognition.onend = function() {
        btn.classList.remove('recording', 'btn-danger');
        btn.classList.add('btn-outline-primary');
        btn.innerHTML = '<i class="fas fa-microphone"></i> Parler';
        if (statusEl) { statusEl.textContent = 'Saisie vocale arrêtée.'; }
    };

    recognition.onerror = function(event) {
        if (statusEl) { statusEl.textContent = 'Erreur: ' + (event.error || 'reconnaissance vocale'); }
    };
})();
</script>

