<script src="https://cdn.jsdelivr.net/npm/chart.js@4"></script>
<script>
(function() {
    var dataEl = document.getElementById('chartEvolutionPatientData');
    var canvas = document.getElementById('chartEvolutionPatient');
    if (!dataEl || !canvas) return;
    var chartData = JSON.parse(dataEl.textContent);
    var labels = chartData.map(function(d) { return d.date; });
    var scores = chartData.map(function(d) { return d.score; });
    new Chart(canvas, {
        type: 'line',
        data: {
            labels: labels,
            datasets: [{
                label: 'Humeur (1-4)',
                data: scores,
                borderColor: 'rgb(23, 162, 184)',
                backgroundColor: 'rgba(23, 162, 184, 0.1)',
                fill: true,
                tension: 0.2,
                pointRadius: 3
            }]
